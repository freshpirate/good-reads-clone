<div class="page-header"><h1>Listing books</h1></div>

<%= will_paginate %>
<table class="table table-hover">
  <tr>
    <th>Cover</th>
    <th>Title</th>
    <th>Isbn number</th>
    <th>Author</th>
    <th>Synopsis</th>
    <th>Published year</th>
    <th>Language</th>
    <th>Publisher</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= link_to image_tag(book.cover, alt: book.title, width: '60px'), book.cover %></td>
    <td><%= link_to book.title, book %></td>
    <td class='large-text'><%= book.isbn_number %></td>
    <td><%= book.author %></td>
    <td class='large-text'><%= book.synopsis %></td>
    <td><%= book.published_year %></td>
    <td><%= book.language %></td>
    <td><%= book.publisher %></td>
    <td><%= link_to 'Show', book %></td>
    <% if current_user.admin? %>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<% if current_user.admin? %>
  <br/>
  <%= link_to 'New Book', new_book_path %>
<% end %>

<%= will_paginate %>